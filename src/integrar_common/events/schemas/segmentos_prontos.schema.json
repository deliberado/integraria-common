{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://schemas.integraria.local/segmentos_prontos.schema.json",
    "type": "object",
    "required": [
        "event_id",
        "schema_version",
        "trace_id",
        "correlation_id",
        "producer",
        "created_at",
        "dedupe_key",
        "payload"
    ],
    "properties": {
        "event_id": {
            "type": "string"
        },
        "schema_version": {
            "type": "string"
        },
        "trace_id": {
            "type": "string"
        },
        "correlation_id": {
            "type": "string"
        },
        "producer": {
            "type": "string"
        },
        "created_at": {
            "type": "string",
            "format": "date-time"
        },
        "dedupe_key": {
            "type": "string"
        },
        "payload": {
            "type": "object",
            "required": [
                "processo_id",
                "artefato_id",
                "segmentos"
            ],
            "properties": {
                "processo_id": {
                    "type": "string"
                },
                "artefato_id": {
                    "type": "string"
                },
                "segmentos": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "object",
                        "required": [
                            "segmento_id",
                            "texto",
                            "confianca_extracao"
                        ],
                        "properties": {
                            "segmento_id": {
                                "type": "string"
                            },
                            "texto": {
                                "type": "string",
                                "minLength": 1
                            },
                            "pagina": {
                                "type": [
                                    "integer",
                                    "null"
                                ]
                            },
                            "start_offset": {
                                "type": [
                                    "integer",
                                    "null"
                                ]
                            },
                            "end_offset": {
                                "type": [
                                    "integer",
                                    "null"
                                ]
                            },
                            "start_time": {
                                "type": [
                                    "number",
                                    "null"
                                ]
                            },
                            "end_time": {
                                "type": [
                                    "number",
                                    "null"
                                ]
                            },
                            "confianca_extracao": {
                                "type": "number",
                                "minimum": 0.0,
                                "maximum": 1.0
                            },
                            "metadados": {
                                "type": [
                                    "object",
                                    "null"
                                ]
                            }
                        }
                    }
                }
            }
        }
    }
}